<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tile_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_bg2"
        android:padding="20dp"
        android:visibility="visible">

    <TextView
            android:id="@+id/text_tile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_900"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_900"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:id="@+id/tile_row"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_width="match_parent">

            <!-- TEAM A -->
            <LinearLayout
                android:id="@+id/team_a_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/text_team_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team A"
                    android:textColor="@color/teal_900"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <!-- User icon for Team A1 -->
                <TextView
                    android:id="@+id/text_icon_a_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_bg3"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="40dp"
                    android:textStyle="bold"
                android:layout_marginTop="15dp"/>


                <TextView
                    android:id="@+id/text_player_a_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal_900"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <!-- User icon for Team A2 -->
                <TextView
                    android:id="@+id/text_icon_a_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_bg3"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/text_player_a_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal_900"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- TEAM B -->
            <LinearLayout
                android:id="@+id/team_b_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/text_team_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team B"
                    android:textColor="@color/teal_900"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <!-- User icon for Team B1 -->
                <TextView
                    android:id="@+id/text_icon_b_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_bg3"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/text_player_b_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal_900"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <!-- User icon for Team B2 -->
                <TextView
                    android:id="@+id/text_icon_b_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_bg3"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/text_player_b_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/teal_900"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
